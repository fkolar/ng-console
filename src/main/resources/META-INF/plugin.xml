<idea-plugin>
    <id>io.nrwl.ide.console</id>
    <name>Angular UI Console</name>
    <version>1.0</version>
    <vendor email="frantisek@kolar.pro" url="http://www.nrwl.io/">Hoop</vendor>
    <description>Angular UI Console based implementation for Webstorm IDE</description>

    <!--<depends>JavaScript</depends>-->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Angular Console"
                    icon="/icons/app-icon.png"
                    anchor="right"
                    factoryClass="io.nrwl.ide.console.ui.NgConsoleWindowFactory"/>

        <projectService serviceInterface="io.nrwl.ide.console.ui.state.NgConsoleState"
                        serviceImplementation="io.nrwl.ide.console.ui.state.NgConsoleState"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>io.nrwl.ide.console.AngularConsoleApp</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>io.nrwl.ide.console.AngularConsoleProject</implementation-class>
        </component>
    </project-components>


    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>